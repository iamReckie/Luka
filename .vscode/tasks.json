{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "Debug",
        "-G",
        "Ninja",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "Debug",
        "--verbose"
      ],
      "group": "build",
      "problemMatcher": "$gcc",
      "dependsOn": [
        "CMake Configure"
      ]
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "${workspaceFolder}/Debug/bin/Luka",
      "dependsOn": [
        "CMake Build"
      ],
      "group": "test"
    },
    {
      "label": "Run Cpplint",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "Debug",
        "--target",
        "run_cpplint"
      ],
      "problemMatcher": {
        "owner": "cpplint",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):\\s+(.+)\\s+\\[(.+)\\]\\s+\\[(\\d+)\\]$",
          "file": 1,
          "line": 2,
          "message": 3,
          "code": 4
        }
      }
    }
  ]
}